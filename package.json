{
    "name": "@proofmeid/webrtc",
    "version": "0.0.0",
    "description": "WebRTC + Signaling Server",
    "author": "Proofme.ID",
    "license": "ISC",
    "main": "proofmeid-webrtc.js",
    "scripts": {
        "build:watch": "npm run tsc-worker && webpack",
        "build:prod": "npm run tsc-worker-prod && webpack --mode=production && cp package.json ./dist/package.json",
        "publish-package": "npm run build:prod && cd ./dist/node && npm publish  && cd ../web && npm publish",
        "tsc-worker": "tsc --p tsconfig.worker.json",
        "tsc-worker-prod": "tsc --p tsconfig.worker.prod.json",
        "watch": "tsc -w",
        "lint": "eslint . --ext .ts",
        "lint:json": "eslint . --ext .ts -f json -o eslint-results.json",
        "lint:fix": "eslint . --fix --ext .ts"
    },
    "dependencies": {
        "@angular/core": "13.2.6",
        "bignumber.js": "9.0.2",
        "rxjs": "7.5.4",
        "uuid": "8.3.2",
        "web3": "1.7.0",
        "websocket": "1.0.34",
        "wrtc": "0.4.7"
    },
    "devDependencies": {
        "@types/uuid": "8.3.4",
        "@types/websocket": "1.0.5",
        "@types/ws": "8.5.3",
        "@typescript-eslint/eslint-plugin": "5.14.0",
        "@typescript-eslint/parser": "5.14.0",
        "dts-bundle": "0.7.3",
        "eslint": "8.11.0",
        "eslint-plugin-no-loops": "0.3.0",
        "fs-extra": "10.0.1",
        "ts-loader": "9.2.8",
        "typescript": "4.5.5",
        "webpack": "5.70.0",
        "webpack-cli": "4.9.2"
    }
}
